<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dip" >


    <LinearLayout android:id="@+id/forecast_thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dip"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="5dip">

        <ImageView
            android:id="@+id/forecast_row_image"
            android:layout_width="50dip"
            android:layout_height="50dip" />

    </LinearLayout>


    <TextView
        android:id="@+id/forecast_max_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/forecast_thumbnail"
        android:layout_toRightOf="@+id/forecast_thumbnail"
        android:text="-"
        android:textColor="#802525"
        android:textSize="15sp"
        android:textStyle="bold"/>


    <TextView
        android:id="@+id/forecast_min_temp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/forecast_max_temp"
        android:textColor="#304085"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginTop="1dip"
        android:layout_toRightOf="@+id/forecast_thumbnail"
        android:text="-" />


    <TextView
        android:id="@+id/forecast_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/forecast_max_temp"
        android:gravity="end"
        android:text="-"
        android:layout_marginRight="5dip"
        android:textSize="12sp"
        android:textStyle="bold"/>

</RelativeLayout>